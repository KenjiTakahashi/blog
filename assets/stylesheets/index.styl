$amain = #151515
$ahover = #2187db
$aprev = #666666
$bcolor = #ffffe3
$rhcolor = #b2b2b2
$arcolor = #7f7f7f

body
    background url("../images/bg.png")
    height 100%
a
    color $amain
a:hover
    color $ahover
.pin
    position relative
    display inline-block
    height 4px
.pn
    position relative
    display inline-block
    height 4px
    text-decoration none
.pn:hover
    background-color $ahover
#left
    position fixed
    width 242px
    margin-left 9px
    margin-top -8px
    float left
    font-family "Courier New", Courier, monospace
    a
        text-decoration none
    #calendar
        background url("../images/cal.png") no-repeat
        color #151515
        height 138px
        font-size 15px
        #selected
            font-weight bold
        .pn
            width 31px
            top 2px
        #prev
            left 18px
        #next
            left 82px
        #my
            display inline-block
            position relative
            left 50px
            top 5px
        #datepicker
            position relative
            border-collapse collapse
            left 13px
            top 9px
            font-size 11px
            text-align right
            .np
                color $aprev
            .np:hover
                color $ahover
            td
                padding-bottom 6px
                padding-left 12px
    #tags_chooser
        background url("../images/tag.png") no-repeat
        height 230px
        margin-top 16px
        font-size 14px
        .pn
            width 189px
            left 18px
        #tprev
            top -1px
        #tnext
            bottom 6px
        .tagcount
            float right
            text-align right
    #posts
        background url("../images/pos.png") no-repeat
        height 196px
        margin-top 16px
        font-size 14px
        .pn
            width 189px
            left 18px
        #pprev
            top -1px
        #pnext
            bottom 10px
        .links
            height 174px
    .links
        list-style none
        padding 0px 41px 0px 24px
        margin -3px 0px 0px
        li
            height 17px
#center
    margin-top -8px
    position absolute
    height 100%
    left 0px
    right 0px
    #title, #btitle, #ptitle
        position fixed
        left 289px
        right 258px
        text-align center
        a
            text-decoration none
        .title_main
            background-color $bcolor
            font-weight bold
            font-size 17px
            padding-right 5px
        .tags
            background-color: $bcolor
            font-size 12px
            padding-right 5px
            padding-bottom 2px
        .lright
            display block
            background-color $bcolor
            width 5px
            height 4px
            float right
    #btitle
        background url("../images/bg.png")
    #ptitle
        position relative
    #content
        overflow hidden
        padding-left 31px
        padding-right 5px
        font-size 14px
        text-align justify
        background-color $bcolor
        position absolute
        left 258px
        right 258px
        min-height 100%
#right
    position fixed
    right 7px
    width 225px
    margin-top 28px
    float right
    font-weight bold
    .aheader
        color $rhcolor
        font-size 22px
    .atext
        color $bcolor
        font-size 13px
        a
            color $arcolor
            text-decoration none
        a:hover
            color $ahover
        .pdname
            text-decoration line-through
    #copyright
        color $rhcolor
        font-size 13px
        position fixed
        bottom 16px
pre
    margin-left -26px
    overflow-x auto
    code
        background $bcolor
        padding 0
code
    font-size 11px
ol
    margin 0
    padding 0
    list-style none
    counter-reset item
    li:before
        font-weight bold
        counter-increment item
    .ten:before
        content "00" counter(item) " "
    .hun:before
        content "0" counter(item) " "
    .tou:before
        content counter(item) " "
