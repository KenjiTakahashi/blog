$amain = #151515
$ahover = #2187db
$aprev = #666666

body
    background url("../images/bg.png")
#left
    width 242px
    margin-left 17px
    margin-top -8px
#calendar
    background url("../images/cal.png") no-repeat
    color #151515
    height 138px
    font-family "Courier New", Courier, monospace
    font-size 15px
    font-weight bold
    .pn
        position relative
        display inline-block
        width 31px
        height 4px
        top 2px
    .pn:hover
        background-color $ahover
    #prev
        left 18px
    #next
        left 82px
    #my
        display inline-block
        position relative
        left 50px
        top 5px
    #datepicker
        position relative
        border-collapse collapse
        left 13px
        top 9px
        font-size 11px
        text-align right
        a
            text-decoration none
        .c:hover, .np:hover
            color $ahover
        .c
            color $amain
        .np
            color $aprev
        td
            padding-bottom 6px
            padding-left 12px
