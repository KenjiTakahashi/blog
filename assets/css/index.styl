$amain = #151515
$ahover = #2187db
$aprev = #666666
$bcolor = #ffffe3
$rhcolor = #b2b2b2
$arcolor = #7f7f7f
$noticecolor = #e4e498

body
    background url("/images/bg.png")
    height 100%
a
    color $amain
a:hover
    color $ahover

#left
    position fixed
    width 242px
    margin-left 10px
    margin-top -8px
    float left
    font-family monospace
    a
        text-decoration none
    .pn
        position relative
        text-decoration none
        font-size 0px
    .pn:after
        position absolute
        content ""
    .pntop:after
        bottom 100%
        border-left 112px inset transparent
        border-right 112px inset transparent
        border-bottom 11px solid $bcolor
    a.pntop:after
        border-bottom 11px solid $noticecolor
    a.pntop:hover:after
        border-bottom 11px solid $ahover
    .pnbot:after
        top 100%
        border-left 112px inset transparent
        border-right 112px inset transparent
        border-top 11px solid $bcolor
    a.pnbot:after
        border-top 11px solid $noticecolor
    a.pnbot:hover:after
        border-top 11px solid $ahover
    .rss
        border-left 8px solid $rhcolor
        border-bottom 8px solid $rhcolor
    #rss
        position absolute
        left 115px
        display block
        width 40px
        height 40px
        border-radius 0 0 0 45px
        div
            position relative
            left 4px
            width 28px
            height 28px
            border-radius 0 0 0 33px
            div
                position relative
                left 10px
                width 0px
                height 0px
                border-radius 100%
                border 9px solid $rhcolor
    #rss:hover
        border-color $ahover
    #date
        display inline-block
        font-family serif
        position relative
        left 163px
        background-color $bcolor
        width 42px
        height 60px
        padding-left 19px
        #day
            position inherit
            left -2px
            height 31px
            font-size 28px
        #month
            position inherit
            left 1px
            top -8px
            height 19px
            font-size 17px
        #year
            position inherit
            top -8px
            font-size 12px
    #calendar
        background-color $bcolor
        color #151515
        width 224px
        height 49px
        font-size 15px
        margin-top 16px
        padding-top 5px
        text-align center
        #selected
            font-weight bold
        .pn
            top -5px
            height 49px
            width 0px
        .pn:after
            border-top 27px inset transparent
            border-bottom 27px inset transparent
        .pnleft
            float left
        .pnleft:after
            right 100%
            border-right 11px solid $noticecolor
        .pnleft:hover:after
            border-right 11px solid $ahover
        .pnright
            float right
        .pnright:after
            left 100%
            border-left 11px solid $noticecolor
        .pnright:hover:after
            border-left 11px solid $ahover
        #datepicker
            border-spacing 0px
            position relative
            left 28px
            font-size 11px
            td
                padding 2px 0px 1px
                width 28px
                text-align center
                vertical-align middle
    #tags_chooser
        background-color $bcolor
        width 224px
        height 214px
        margin-top 27px
        font-size 14px
        .tagcount
            width 37px
            float right
            text-align right
    #posts
        background-color $bcolor
        width 224px
        height 180px
        margin-top 38px
        font-size 14px
    .links
        list-style none
        padding 5px 18px 5px 18px
        margin 0px
        li
            height 17px

#center
    margin-top -8px
    position absolute
    height 100%
    left 0px
    right 0px
    #title, #ptitle
        position fixed
        left 289px
        right 258px
        text-align center
        margin-right 5px
        background-color $bcolor
        a
            text-decoration none
        .title_main
            font-weight bold
            font-size 17px
        .tags
            font-size 12px
            padding-bottom 2px
    #title
        border-bottom 4px solid $noticecolor
    #ptitle
        position relative
        visibility hidden
    #content
        overflow hidden
        padding-left 31px
        padding-right 5px
        font-size 14px
        text-align justify
        background-color $bcolor
        position absolute
        left 258px
        right 258px
        min-height 100%
        .notice
            margin-top 5px
            margin-bottom 5px
            background $noticecolor
            padding 5px
        canvas
            background $rhcolor
        .notice span
            float right
    pre
        margin-left -26px
        overflow-x auto
        code
            background-color $bcolor
            padding 0
    code
        font-size 11px
    ol
        margin 0
        padding 0
        list-style none
        counter-reset item
        li:before
            font-weight bold
            counter-increment item
        .ten:before
            content "00" counter(item) " "
        .hun:before
            content "0" counter(item) " "
        .tou:before
            content counter(item) " "

#right
    position fixed
    right 7px
    width 225px
    margin-top 12px
    float right
    font-weight bold
    #comments
        position absolute
        right -7px
        background-color $bcolor
        z-index 2
    .commentsa
        position relative
        display block
        width 100px
        height 40px
        text-decoration none
        text-align center
        line-height 40px
        font-size 18px
        font-weight normal
    .commentsa:after
        position absolute
        content ""
        width 0px
        height 0px
    #commentsa:after
        right 100%
        border-right 11px solid $noticecolor
        border-top 20px solid transparent
        border-bottom 20px solid transparent
    #acommentsa
        color $bcolor
        background-color $amain
    #acommentsa:hover
        color $ahover
    #acommentsa:after
        left 100%
        border-left 11px solid $amain
        border-top 20px solid transparent
        border-bottom 20px solid transparent
    #atop
        margin-top 51px
    #aka
        color $bcolor
        margin-left -23px
        font-size 13px
    .aheader
        color $rhcolor
        font-size 22px
    .atext
        color $bcolor
        font-size 13px
        a
            color $arcolor
            text-decoration none
        a:hover
            color $ahover
        .pdname
            text-decoration line-through
        span
            float right
    #copyright
        position fixed
        bottom 16px
        color $rhcolor
        font-size 13px
