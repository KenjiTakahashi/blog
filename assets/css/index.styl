$amain = #151515
$ahover = #2187db
$aprev = #666666
$bcolor = #ffffe3
$rhcolor = #b2b2b2
$arcolor = #7f7f7f

body
    background url("../images/bg.png")
    height 100%
a
    color $amain
a:hover
    color $ahover

#left
    position fixed
    width 242px
    margin-left 10px
    margin-top -8px
    float left
    font-family monospace
    a
        text-decoration none
    .pn
        position relative
        display inline-block
        height 4px
        text-decoration none
        background-color $amain
    .pn:hover
        background-color $ahover
    #date
        font-family serif
        position relative
        left 163px
        background-color $bcolor
        width 42px
        height 60px
        padding-left 19px
        #day
            position inherit
            left -2px
            height 31px
            font-size 28px
        #month
            position inherit
            left 1px
            top -8px
            height 19px
            font-size 17px
        #year
            position inherit
            top -8px
            font-size 12px
    #calendar
        background-color $bcolor
        color #151515
        width 224px
        height 62px
        font-size 15px
        margin-top 16px
        #selected
            font-weight bold
        .pn
            width 31px
            top 2px
        #prev
            left 18px
        #next
            left 100px
        #my
            display inline-block
            position relative
            left 59px
            top 5px
        .sep
            display inline-block
            position relative
            top 5px
            background-color $amain
            width 4px
            height 10px
        #sleft
            left 31px
        #sright
            left 87px
        #datepicker
            border-spacing 0px
            position relative
            left 18px
            top 5px
            font-size 11px
            td
                padding 2px 0px 1px
                width 28px
                text-align center
                vertical-align middle
                border-top 4px solid $amain
            .tsep
                width 4px
                span
                    display inline-block
                    width 4px
                    height 7px
                    background-color $amain
    .pin
        position relative
        display inline-block
        height 4px
        width 189px
        left 18px
        text-decoration none
        background-color $amain
    #tags_chooser
        background-color $bcolor
        width 224px
        height 230px
        margin-top 16px
        font-size 14px
        .pn
            width 189px
            left 18px
        #tprev
            top -1px
        #tnext
            bottom 6px
        .tagcount
            width 37px
            float right
            text-align right
            span
                position relative
                top 2px
                display inline-block
                width 4px
                height 13px
                background-color $amain
                float left
    #posts
        background-color $bcolor
        width 224px
        height 196px
        margin-top 16px
        font-size 14px
        .pn
            width 189px
            left 18px
        #pprev
            top -1px
        #pnext
            bottom 10px
        .links
            height 174px
    .links
        list-style none
        padding 0px 25px 0px 25px
        margin -3px 0px 0px
        li
            height 17px

#center
    margin-top -8px
    position absolute
    height 100%
    left 0px
    right 0px
    #title, #ptitle
        position fixed
        left 289px
        right 258px
        text-align center
        margin-right 5px
        background-color $bcolor
        a
            text-decoration none
        .title_main
            font-weight bold
            font-size 17px
        .tags
            font-size 12px
            padding-bottom 2px
    #title
        border-bottom 4px solid $amain
    #ptitle
        position relative
        visibility hidden
    #content
        overflow hidden
        padding-left 31px
        padding-right 5px
        font-size 14px
        text-align justify
        background-color $bcolor
        position absolute
        left 258px
        right 258px
        min-height 100%
        .notice, canvas
            background: $rhcolor
            margin-top 5px
            margin-bottom 5px
        .notice
            padding: 6px
        canvas
            width: 100%
    pre
        margin-left -26px
        overflow-x auto
        code
            background-color $bcolor
            padding 0
    code
        font-size 11px
    ol
        margin 0
        padding 0
        list-style none
        counter-reset item
        li:before
            font-weight bold
            counter-increment item
        .ten:before
            content "00" counter(item) " "
        .hun:before
            content "0" counter(item) " "
        .tou:before
            content counter(item) " "

#right
    position fixed
    right 7px
    width 225px
    margin-top 28px
    float right
    font-weight bold
    .aheader
        color $rhcolor
        font-size 22px
    .atext
        color $bcolor
        font-size 13px
        a
            color $arcolor
            text-decoration none
        a:hover
            color $ahover
        .pdname
            text-decoration line-through
    #copyright
        color $rhcolor
        font-size 13px
        position fixed
        bottom 16px
