$main = #c8c8c8
$amain = #555555
$ahover = #1c7272

html, body
    height 100%
html
    display table
    margin auto
body
    display table-cell
    vertical-align middle
    color $main
    font-family monospace
    padding 20px 40px
#head
    font-size 16px
#items
    font-size 13px
    list-style none
    margin 4px 0px 0px
    padding 0px
a
    color $amain
    text-decoration none
a:hover
    color $ahover
.dead
    text-decoration line-through
#post
    font-family sans-serif
    font-size 14px
    color $amain
    width 100%
    height 100%
    min-height 100%
    text-align justify
    a, #title
        font-weight 700
#foot
    position absolute
    right 10px
pre code
    background-color white
    margin 0px
    padding 0px
